datasource db {
  provider = "mysql"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String @id @default(uuid())
  alias       String @unique
  displayName String
  password    String

  setting Setting?
}

model Setting {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  rulePostPrejudice PrejudicePostRule @default(MUTUAL_ONLY)
}

enum PrejudicePostRule {
  ALL_FOLLOWERS
  MUTUAL_ONLY
}
